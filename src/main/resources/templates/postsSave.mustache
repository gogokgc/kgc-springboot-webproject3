{{>layout/header}}

<div class="container">

	<form class="was-validated">
	
		<div class="form-group">
 			<label for="author"> 작성자 </label>
			<input type="text" class="form-control" id="author" value="{{userName}}" readonly>
 		</div>

		<div class="form-group">
			<label for="title">Title</label> 
			<input type="text"class="form-control" placeholder="Enter title" id="title" required>
			<div class="valid-feedback"></div>
    		<div class="invalid-feedback"></div>
		</div>

		<div class="form-group text-body">
			<label class="text-white" for="content">Content</label>
			<textarea class="form-control summernote" rows="5" id="content" placeholder="Please fill out this field" required></textarea>
			<div class="valid-feedback"></div>
    		<div class="invalid-feedback"></div>
		</div>

	</form>
	<div class="d-flex justify-content-between">
		<button id="btn-save" class="btn btn-primary">Save</button>
		<a href="/" class="btn btn-secondary">Cancel</a>
	</div>
</div>

<script>
	$('.summernote').summernote({
		tabsize : 2,
		height : 200
	});
</script>

{{>layout/footer}}