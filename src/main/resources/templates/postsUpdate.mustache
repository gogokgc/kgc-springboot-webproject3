{{>layout/header}}
<style>
.button-right{
float: right;
}
</style>

<div id="main">
	<div class="inner">
		<header>
			<h1>Editing page</h1>
			<br />
			<p>Edit your post</p>
		</header>

		<div class="fields">
			<form>
			<table class="alt">
			<tr>
		        <th>Post Num : <input type="text" id="id" value="{{post.id}}" readonly="readonly"></th>
		     
		        <th>Writer : <input type="text" id="author" value="{{post.author}}" readonly="readonly"></th>
		     
		        <th>Category : <input type="text" value="none" readonly="readonly"></th>
		     </tr>
    	</table>
				<div class="field half">
					<h4>TITLE</h4>
					<input type="text" name="name" id="title" value="{{post.title}}" autofocus="autofocus" />
				</div>
				</br>
				<div class="col-12">
					<h4>CONTENT</h4>
					<textarea name="content" id="content" rows="6" spellcheck="true">{{post.content}}</textarea>
				</div>
			</form>
			</br>
			<ul class="actions">
				<li><a id="btn-update" class="button primary">Save</a></li>
				<li><a href="/" class="button">Cancel</a></li>
				<li><a href="/posts/update/{{id}}" class="button">RESET</a></li>
				<li><a id="btn-delete" class="button">Delete</a></li>
			</ul>
		</div>
	</div>
</div>

{{>layout/footer}}
